<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/rippleColor</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:background">@drawable/background_white_radius_10dp</item>
        <item name="android:popupBackground">@drawable/background_white_radius_10dp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="CustomTimePickerShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomTimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Positive.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Negative.Button</item>
    </style>

    <style name="MaterialTimePicker.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="Widget.App.Negative.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Widget.App.Positive.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>
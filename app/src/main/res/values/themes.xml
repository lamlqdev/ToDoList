<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ToDoList" parent="Base.Theme.ToDoList">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnContainer">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomMaterialTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceContainerHighest">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="textAppearanceHeadlineLarge">@style/CustomHeadlineLarge</item>
        <item name="shapeAppearanceOverlay">@style/CustomTimePickerShapeAppearance</item>
    </style>

    <style name="CustomTimePickerShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomHeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>